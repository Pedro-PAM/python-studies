#Exercio de calculadora utilizando função
def calculadora(num1, num2, op):
    res = 0
    if op == 1:
        res = num1 + num2
        return res
    elif op == 2:
        res = num1 - num2
        return res
    elif op == 3:
        res = num1 * num2
        return res
    elif op == 4:
        res = num1 / num2
        return res
    else:
        return 0
    
        
