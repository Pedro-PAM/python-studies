# Exercio de calculadora utilizando função
def calculator(num1, num2, op):
    res = 0
    if op == 1:
        res = num1 + num2
        return res
    elif op == 2:
        res = num1 - num2
        return res
    elif op == 3:
        res = num1 * num2
        return res
    elif op == 4:
        res = num1 / num2
        return res
    else:
        return 0

# input do usuario
print("Entre com a operação desejada...(+,-,*,/)")
op = int(input())
print("Entre com o primeiro numero...")
num1 = int(input())
print("Entre com o segundo numero...")
num2 = int(input())
print(calculator(num1, num2, op))


